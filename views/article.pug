extends layout

block content
  script(src='//cdn.tinymce.com/4/tinymce.min.js')
  script.
    tinymce.init({ selector:'textarea',readonly:true,menubar:false,branding:false,toolbar:false,
                        plugins: "autoresize",resize:false,autoresize_bottom_margin: 20});
  h1 #{article.title}
  h5 Written By #{author}
  textarea #{article.body}
  hr
  if user
    if user.id==article.author || user.id=="59e4d03d2a00111b28423e46" || user.id=="59e5cc19f38fe700125d9e4e"
      a.btn.btn-default(href='/articles/edit/'+article._id) Edit
      a.btn.btn-danger.delete-article(href='#',data-id=article._id,style="margin-left:20px;") Delete
      br
      br
  .fb-like(data-href="https://articlehub.herokuapp.com/", data-layout="standard", data-action="like", data-size="small", data-show-faces="true", data-share="true")
  br
  .fb-comments(data-href="https://articlehub.herokuapp.com/", data-numposts="5")
  
